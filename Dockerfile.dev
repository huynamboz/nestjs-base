# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install netcat for health checks
RUN apk add --no-cache netcat-openbsd

# Copy package files
COPY package*.json ./
COPY yarn.lock* ./

# Install all dependencies (including devDependencies for development)
# Note: Dependencies will be auto-updated in entrypoint if package.json changes
RUN yarn install --frozen-lockfile && yarn cache clean

# Copy configuration files needed for migrations and builds
COPY ormconfig.ts ./
COPY tsconfig.json ./
COPY tsconfig.build.json ./
COPY nest-cli.json ./

# Copy source code (will be overridden by volume mount in docker-compose for hot reload)
COPY src ./src

# Copy entrypoint script for dev
COPY docker-entrypoint.dev.sh ./
RUN chmod +x docker-entrypoint.dev.sh

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nestjs -u 1001

# Change ownership
RUN chown -R nestjs:nodejs /app

USER nestjs

# Expose port
EXPOSE 3000

# Development mode - entrypoint script handles migrations and starts dev server
# Volume mounts in docker-compose will override src for hot reload

